<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/inGraph/config/validators.xml"
>
    <ae:configuration>
        <validators>
            <validator class="or" name="queryOrHostAndService" required="true">
                <validators>
                    <validator class="and" name="queryAndTemplate">
                        <validators>
                            <validator name="query" class="JsonValidator"
                                       required="true">
                                <argument>query</argument>
                                <error>Parameter query is mandatory.</error>
                            </validator>
                            <validator name="template" class="JsonValidator"
                                       required="false">
                                <argument>template</argument>
                            </validator>
                        </validators>
                    </validator>
                    <validator class="and" name="hostAndService">
                        <validators>
                            <validator name="host" class="string" required="true">
                                <argument>host</argument>
                                <error>Parameter host is mandatory.</error>
                            </validator>
                            <validator name="parentService" class="string"
                                       required="false">
                                <argument>parentService</argument>
                            </validator>
                            <validator name="service" class="string"
                                       required="false">
                                <argument>service</argument>
                            </validator>
                        </validators>
                    </validator>
                </validators>
            </validator>
            <validator name="width" class="number" required="false">
                <argument>width</argument>
            </validator>
            <validator name="height" class="number" required="false">
                <argument>height</argument>
            </validator>
            <validator name="start" class="TimeValidator" required="false">
                <argument>start</argument>
            </validator>
            <validator name="end" class="TimeValidator" required="false">
                <argument>end</argument>
            </validator>
            <validator name="interval" class="number" required="false">
                <argument>interval</argument>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>
